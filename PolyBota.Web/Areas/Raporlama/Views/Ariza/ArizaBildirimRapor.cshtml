@model PolyBota.Web.Areas.Raporlama.Models.RaporlamaArizaModel

@{
    ViewBag.Title = "ArizaBildirimRapor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-title">
    <div class="col-md-8 col-sm-12">
        <div class="col-md-6">
            <h3>Arıza Bildirim Rapor</h3>

        </div>
        <Div class="col-md-6">
            <div class="btn btn-group" role="group">

                <a class="btn btn-success btn-sm" href="/"><i class="fa fa-reply-all"></i> Anasayfa</a>


            </div>
        </Div>

    </div>
    <div class="col-md-4 col-sm-12">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">

                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>

                    <li class="breadcrumb-item active" aria-current="page">Arıza Bildirim Rapor</li>
                </ol>
            </nav>
        </div>
    </div>


</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h5>
                    Arıza Bildirim Rapor
                </h5>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <form id="frm-alan">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <b> Tarih Aralığı </b>
                                <div class="btn-group w-100">
                                    @Html.TextBoxFor(x => x.BaslangicTarihi, "{0:yyyy-MM-dd}", new
                                    {
                                        @class = "form-control",

                                        @type = "date"
                                    })
                                    @Html.TextBoxFor(x => x.BitisTarihi, "{0:yyyy-MM-dd}", new
                                    {
                                        @class = "form-control",

                                        @type = "date"
                                    })
                                </div>



                            </div>

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <hr />
                        </div>
                        <div class="col-sm-12">

                            <b>Arıza Techizat Grubu</b>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="btn btn-group float-right" role="group">

                                        <a href="javascript:" class="btn btn-sm btn-success" onclick="checkAll('01', '.', 0)">
                                            <i class="fa fa-check-square"></i>
                                        </a>
                                        <a href="javascript:" class="btn btn-sm btn-danger" onclick="checkAll('01', '.', 1)">
                                            <i class="fa fa-times"></i>
                                        </a>

                                    </div>
                                </div>

                                @for (int i = 0; i < Model.DropArizaTechizatGruplar.Count; i++)
                                {
                                    var item = Model.DropArizaTechizatGruplar[i];
                                    @Html.HiddenFor(a => a.DropArizaTechizatGruplar[i].IdInt)
                                    <div class="col-md-4">
                                        <label>@Html.CheckBoxFor(a => a.DropArizaTechizatGruplar[i].SeciliMi, new { @class = "01" }) @item.Tanim</label>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <hr />
                        </div>
                        <div class="col-sm-12">

                            <b>Arıza Durumu</b>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="btn btn-group float-right" role="group">

                                        <a href="javascript:" class="btn btn-sm btn-success" onclick="checkAll('03', '.', 0)">
                                            <i class="fa fa-check-square"></i>
                                        </a>
                                        <a href="javascript:" class="btn btn-sm btn-danger" onclick="checkAll('03', '.', 1)">
                                            <i class="fa fa-times"></i>
                                        </a>

                                    </div>
                                </div>

                                @for (int i = 0; i < Model.DropArizaDurumus.Count; i++)
                                {
                                    var item = Model.DropArizaDurumus[i];

                                    @Html.HiddenFor(a => a.DropArizaDurumus[i].IdInt)
                                    <div class="col-md-4">
                                        <label>@Html.CheckBoxFor(a => a.DropArizaDurumus[i].SeciliMi, new { @class = "03" }) @item.Tanim</label>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <hr />
                        </div>
                        <div class="col-sm-12">

                            <b>Sorumlu Departmanlar</b>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="btn btn-group float-right" role="group">

                                        <a href="javascript:" class="btn btn-sm btn-success" onclick="checkAll('02', '.', 0)">
                                            <i class="fa fa-check-square"></i>
                                        </a>
                                        <a href="javascript:" class="btn btn-sm btn-danger" onclick="checkAll('02', '.', 1)">
                                            <i class="fa fa-times"></i>
                                        </a>

                                    </div>
                                </div>

                                @for (int i = 0; i < Model.DropSorumluDepartmans.Count; i++)
                                {
                                    var item = Model.DropSorumluDepartmans[i];

                                    @Html.HiddenFor(a => a.DropSorumluDepartmans[i].IdInt)
                                    <div class="col-md-4">
                                        <label>@Html.CheckBoxFor(a => a.DropSorumluDepartmans[i].SeciliMi, new { @class = "02" }) @item.Tanim</label>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <a href="javascript:" onclick="frmAnaliz()" class="btn btn-outline-success w-100"><i class="fas fa-analytics"></i> Analiz Yap</a>
                        </div>
                    </div>
                </form>
            </div>
            
            <div class="x_content" id="result-alan">

            </div>
        </div>
    </div>
</div>




@section Scripts
{
    <script>
        function frmAnaliz() {
            var data = $("#frm-alan").serialize();
            var url = "/Raporlama/Ariza/ArizaBildirimAnalizYap";
            var alan = $("#result-alan");

            alan.empty();
            alan.append("<h2>Analiz Yapılıyor Bekleyiniz</h2>");

            $.ajax({
                type: "POST",
                url: url,
                data: data,
                success: function (result) {
                    alan.empty();
                    alan.append("<h2>Analiz Yapılıyor Bekleyiniz</h2>");
                    alan.empty();
                    alan.append(result);
                    Yenile();
                    $(window).scrollTop(alan.offset().top);

                },
                error: function () {
                    alert("hata oluştu");
                }
            });
        }

        //frmAnaliz();
        menuKapat();
    </script>
}