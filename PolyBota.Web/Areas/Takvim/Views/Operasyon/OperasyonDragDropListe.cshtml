@model PolyBota.Web.Areas.Takvim.Model.TakvimOperasyonModel

@{
    ViewBag.Title = "OperasyonDragDropListe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 table-responsive">
        <table class="table table-bordered table-sm">
            
            <thead>
            <tr>
                <th colspan="2"></th>
                
                @foreach (var header in Model.TableHeaderlar)
                {
                    <th>@header.Tanim</th>
                }
            </tr>
            </thead>
            
            <tbody>
            @for (int i = 0; i < Model.ArrTable.GetUpperBound(0); i++)
            {
                <tr>
                    <td>
                    
                    </td>
                    <td>
                      
                    </td>
                    @for (int j = 0; j < Model.ArrTable.GetUpperBound(1); j++)
                    {
                        var opId = Model.ArrTable[i, j, 0, 0];
                        var kompTalimatAdi = "";
                        var potaKartAdi = "";


                        if (opId != 0)
                        {
                            var item = Model.TakvimOperasyonItemDetayModels.First(a => a.OperasyonId == opId);
                            potaKartAdi = item.PotaKartAdi;
                            kompTalimatAdi = item.KomponentTalimatGrupAdi;
                           
                        }
                        <td>
                            @potaKartAdi <br/>
                            @kompTalimatAdi
                        </td>
                    }
                </tr>
               
            }
            </tbody>
        </table>
    </div>
</div>

