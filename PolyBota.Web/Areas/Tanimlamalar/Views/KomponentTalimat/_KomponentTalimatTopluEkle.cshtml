@model PolyBota.Web.Areas.Tanimlamalar.Models.TanimlamaKompTalimatModel

<div class="modal fade" id="modal2" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Html.Raw(Model.KomponentTalimat.Id == 0 ? "YENİ KAYIT" : "KAYIT DÜZENLE")</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>



            @using (Html.BeginForm("KomponentTalimatTopluEkle", "KomponentTalimat"))
            {

                @Html.HiddenFor(a => a.KomponentTalimatGrup.Id)
                <div class="modal-body">

                    @foreach (var grup in Model.TalimatGrupTanims)
                    {
                        <div class="row">


                            <div class="col-md-12">
                                <div class="form-group">
                                  
                                   

                                    <div class="row">
                                        <div class="col-md-6">
                                            <button class="btn">   <b>@grup.TalimatGrupTanimAdi</b></button>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="btn btn-group btn-group-sm float-right" role="group">
                                                <a href="javascript:" class="btn btn-sm btn-success" onclick="checkAll(@grup.Id, '.', 0)">
                                                    <i class="fa fa-check-square"></i>
                                                </a>
                                                <a href="javascript:" class="btn btn-sm btn-danger" onclick="checkAll(@grup.Id, '.', 1)">
                                                    <i class="fa fa-times"></i>
                                                </a>

                                            </div>



                                        </div>
                                        <div class="col-md-12">


                                            <hr/>
                                        </div>
                                        @foreach (var item in Model.TalimatTanims.Where(a => a.TalimatGrupTanimId == grup.Id))
                                        {
                                            var b = Model.TalimatTanims.IndexOf(item);

                                            <div class="col-md-4">
                                                @Html.HiddenFor(a => a.TalimatTanims[b].Id)
                                                <label>@Html.CheckBoxFor(a => a.TalimatTanims[b].SeciliMi, new {@class = grup.Id}) @item.TalimatAciklama</label>
                                            </div>
                                        }
                                    </div>

                                </div>
                            </div>




                        </div>
                    }

                    <div class="col-md-12">

                        <button type="submit" class="btn btn-block btn-success">KAYDET</button>

                    </div>

                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">KAPAT</button>

                </div>
            }



        </div>

    </div>
    <!-- /.modal-dialog -->
</div>

