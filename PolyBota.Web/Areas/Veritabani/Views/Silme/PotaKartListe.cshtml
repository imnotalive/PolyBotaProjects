@model PolyBota.Web.Areas.Veritabani.Models.SilmeModel

@{
    ViewBag.Title = "PotaKartListe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="col-md-8 col-sm-12">
        <div class="col-md-6">
            <h5>Pota Kart Silme Talepleri</h5>

        </div>
        <Div class="col-md-6">
            <div class="btn btn-group" role="group">

                <a class="btn btn-success btn-sm" href="/"><i class="fa fa-reply-all"></i> Anasayfa</a>


            </div>
        </Div>

    </div>
    <div class="col-md-4 col-sm-12">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">

                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>

                    <li class="breadcrumb-item active" aria-current="page">Pota Kart Silme Talepleri</li>
                </ol>
            </nav>
        </div>
    </div>


</div>

<div class="clearfix"></div>


<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Pota Kart Silme Talepleri


                </h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                @using (Html.BeginForm())
                {

                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            
                            <table class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>

                                    </th>
                                    <th>Tanım</th>
                                    <th>Pota Kodu</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                @for (int i = 0; i < Model.PotaKarts.Count; i++)
                                {
                                    var item = Model.PotaKarts[i];
                                    @Html.HiddenFor(a=>a.PotaKarts[i].Id)
                                    <tr>
                                        <td>@(i+1)</td>
                                        <td>@item.PotaKartAdi</td>
                                        <td>@item.PotaKodu</td>
                                        <td>
                                            <div class="btn-group btn-block">
                                                <label class="btn btn-warning beyaz">
                                                    @Html.RadioButtonFor(a=>a.PotaKarts[i].SilinsinMi,1) İptal Et
                                                </label>
                                                <label class="btn btn-danger beyaz">
                                                    @Html.RadioButtonFor(a=>a.PotaKarts[i].SilinsinMi, 2) Sil
                                                </label>
                                            </div>
                                          
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>

                       
                            <div class="form-group">
                                <button type="submit" class="btn btn-block btn-lg btn-success"><i class="fas fa-edit"></i> İŞLEMLERİ YAP </button>
                            </div>
                        </div>
                  
                    </div>


                }


            </div>
        </div>
    </div>
</div>

