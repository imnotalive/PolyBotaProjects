@model PolyBota.Web.Models.AnasayfaModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="col-md-8 col-sm-12">
        <div class="col-md-6">
            <h5>Anasayfa</h5>

        </div>
        <Div class="col-md-6">
            <div class="btn btn-group" role="group">

                <a class="btn btn-success btn-sm" href="/"><i class="fa fa-reply-all"></i> Anasayfa</a>


            </div>
        </Div>

    </div>
    <div class="col-md-4 col-sm-12">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">

                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>

                </ol>
            </nav>
        </div>
    </div>


</div>

<div class="clearfix"></div>


<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Anasayfa
                </h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger">
                            <h5 class="text-center">DİKKAT!!!</h5>
                            <h3 class="text-center">Bu Sistem üzerinde yapılan tüm kayıtlar kişiye özel olarak yapılmaktadır.<br/>
                                Eğer giriş yapan kişi siz değilseniz; Tüm Sorumluluk Giriş Yapmış olan kullanıcıya ait olacaktır.
                         
                            </h3>
                        </div>
                        <div class="alert alert-info">
              
                            <h3 class="text-center">
                                Giriş Yapan Kullanıcı: @Model.Aciklama
                                <br/>
                                <a href="@Url.Action("LogOut","User")" class="btn btn-warning"><i class="fas fa-exclamation-circle"></i> Kullanıcı Değiştir</a>
                            </h3>
                        </div>
                    </div>
                


                </div>
            </div>
        </div>
    </div>
</div>
